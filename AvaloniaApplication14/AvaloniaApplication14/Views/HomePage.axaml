<UserControl
    x:Class="AvaloniaApplication14.Views.HomePage"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:asyncImageLoader="clr-namespace:AsyncImageLoader;assembly=AsyncImageLoader.Avalonia"
    xmlns:controls="using:AvaloniaApplication14.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    x:Name="homePageUserControl"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Styles>
        <Style Selector="Button">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Foreground" Value="{DynamicResource ButtonForegroundPointerOver}" />
        </Style>
        <Style Selector="Button:pressed /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Foreground" Value="{DynamicResource ButtonForegroundPointerOver}" />
        </Style>
    </UserControl.Styles>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Panel
            Grid.Row="0"
            Height="60"
            VerticalAlignment="Top"
            Background="#222327">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontFamily="avares://AvaloniaApplication14/Assets/Fonts/circular_medium.ttf#Circular"
                FontSize="16"
                FontWeight="Normal"
                Foreground="#FFF"
                Text="Home" />
        </Panel>
        <ScrollViewer
            Grid.Row="1"
            HorizontalScrollBarVisibility="Disabled"
            VerticalScrollBarVisibility="Hidden">
            <StackPanel>
                <TextBlock
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    FontFamily="avares://AvaloniaApplication14/Assets/Fonts/circular_bold.ttf#Circular"
                    FontSize="18"
                    Foreground="White"
                    Text="Made For You" />
                <TextBlock
                    Margin="40,5,0,10"
                    HorizontalAlignment="Center"
                    FontSize="13"
                    Foreground="#adaeb2"
                    Text="Get better recommendations the more you listen." />
                <ScrollViewer HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Disabled">
                    <ItemsRepeater Margin="0,10,0,0" Items="{Binding Songs}">
                        <ItemsRepeater.Layout>
                            <StackLayout Orientation="Horizontal" />
                        </ItemsRepeater.Layout>
                        <ItemsRepeater.ItemTemplate>
                            <DataTemplate>
                                <controls:TapButton Command="{Binding #homePageUserControl.DataContext.NavigatePlayerPageCommand}">
                                    <StackPanel Width="180" Height="200">
                                        <Image
                                            Width="150"
                                            Height="150"
                                            x:Name="myimg"
                                            asyncImageLoader:ImageLoader.Source="{Binding AlbumImageUrl}" />
                                        <TextBlock
                                            Margin="0,5,0,0"
                                            HorizontalAlignment="Center"
                                            FontFamily="avares://AvaloniaApplication14/Assets/Fonts/circular_bold.ttf#Circular"
                                            FontSize="13"
                                            Foreground="White"
                                            Text="{Binding Title}" />
                                        <TextBlock
                                            Margin="0,3,0,0"
                                            HorizontalAlignment="Center"
                                            FontSize="12"
                                            Foreground="#adaeb2"
                                            Text="{Binding Artist}" />
                                    </StackPanel>

                                </controls:TapButton>
                            </DataTemplate>
                        </ItemsRepeater.ItemTemplate>
                    </ItemsRepeater>

                </ScrollViewer>
                <TextBlock
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    FontFamily="avares://AvaloniaApplication14/Assets/Fonts/circular_bold.ttf#Circular"
                    FontSize="18"
                    Foreground="White"
                    Text="Jump Back In" />
                <ScrollViewer HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Disabled">
                    <ItemsRepeater Margin="0,15,0,0" Items="{Binding Albums}">
                        <ItemsRepeater.Layout>
                            <StackLayout Orientation="Horizontal" />
                        </ItemsRepeater.Layout>
                        <ItemsRepeater.ItemTemplate>
                            <DataTemplate>
                              <controls:TapButton>
                                    <StackPanel Width="180" Height="200">
                                        <Image
                                            Width="150"
                                            Height="150"
                                            asyncImageLoader:ImageLoader.Source="{Binding ImageUrl}" />
                                        <TextBlock
                                            Margin="0,5,0,0"
                                            HorizontalAlignment="Center"
                                            FontFamily="avares://AvaloniaApplication14/Assets/Fonts/circular_bold.ttf#Circular"
                                            FontSize="13"
                                            Foreground="White"
                                            Text="{Binding Name}" />
                                        <TextBlock
                                            Margin="0,3,0,0"
                                            HorizontalAlignment="Center"
                                            FontSize="13"
                                            Foreground="#adaeb2"
                                            Text="{Binding Artist}" />
                                    </StackPanel>
                                </controls:TapButton>
                            </DataTemplate>
                        </ItemsRepeater.ItemTemplate>
                    </ItemsRepeater>
                </ScrollViewer>
                <TextBlock
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    FontFamily="avares://AvaloniaApplication14/Assets/Fonts/circular_bold.ttf#Circular"
                    FontSize="18"
                    Foreground="White"
                    Text="Recently Played" />
                <ScrollViewer HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Disabled">
                    <ItemsRepeater Margin="0,15,0,0" Items="{Binding Playlists}">
                        <ItemsRepeater.Layout>
                            <StackLayout Orientation="Horizontal" />
                        </ItemsRepeater.Layout>
                        <ItemsRepeater.ItemTemplate>
                            <DataTemplate>
                              <controls:TapButton>
                                    <StackPanel Width="180" Height="200">
                                        <Image
                                            Width="150"
                                            Height="150"
                                            asyncImageLoader:ImageLoader.Source="{Binding ImageUrl}" />
                                        <TextBlock
                                            Margin="0,5,0,0"
                                            HorizontalAlignment="Center"
                                            FontFamily="avares://AvaloniaApplication14/Assets/Fonts/circular_bold.ttf#Circular"
                                            FontSize="13"
                                            Foreground="White"
                                            Text="{Binding Name}" />
                                        <TextBlock
                                            Margin="0,3,0,0"
                                            HorizontalAlignment="Center"
                                            FontSize="12"
                                            Foreground="#adaeb2"
                                            Text="{Binding NrOfFollowers, StringFormat=' {0} FOLLOWERS'}" />
                                    </StackPanel>
                                </controls:TapButton>
                            </DataTemplate>

                        </ItemsRepeater.ItemTemplate>
                    </ItemsRepeater>
                </ScrollViewer>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
